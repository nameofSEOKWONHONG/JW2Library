@using TodoBlazor.TodoList
<form class="TodoInsert" @onsubmit="OnSubmit">
  <input
    placeholder="할 일을 입력하세요"
    @bind="@Text" 
    
    />
  <button class="btn btn-primary" type="submit" @onsubmit="OnSubmit">save</button>
</form>

@code {
      //@oninput="(eventArgs) => {OnChangeAsync(eventArgs.Value.ToString());}"
  public string Text { get; set; }
  
  [Parameter]
  public EventCallback<TodoItem> OnSubmitCallback { get; set; }

  public async Task OnSubmit() {
    Console.WriteLine(this.Text);
    await OnSubmitCallback.InvokeAsync(new TodoItem() {
      Id = 0,
      IsDone = false,
      IsToggle = false,
      Text = this.Text
    });
  }

